<div style="width:90%; margin:0 auto; padding: 10px 10px;">
<div>
    <%= products.length + " results found" %>
    <hr>
</div>

<% for (let i = 0; i < products.length; i++) { %>
    
        <div style="display:inline-block; width:15%; padding: 0">
            <img style="max-width: 100%;  margin: 0; padding: 0" src=<%= "..\\" + products[i].image_path %>>
        </div><div style="display:inline-block; width:65%; vertical-align: top">
                <div><h3><%= products[i].name %></h3></div>
                <div style="display:inline-block;"><%= products[i].description %></div>
        </div><div style="float:right; width:20%; text-align: right;">
            <h3>$<%= products[i].price %></h3>
            <button  id="<%= products[i].id %>" onclick="alert('PRODUCT ID: ' + this.id);">
                <img height="7%" src="/interface images/buy4.jpg">
            </button>
        </div>

    <hr>
<% } %>
</div>