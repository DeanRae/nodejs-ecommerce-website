<!-- for flash error messages -->
<% if ( flashMessages && flashMessages.error.length > 0) { %>
<div class="alert alert-error alert-dismissible" role="alert">
    <strong>Error</strong>

    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>

    <ul>
        <% flashMessages.error.forEach((item) => { %>
        <li><%= item %></li>
        <% }) %>
    </ul>
</div>
<%}%>

<!-- for flash success messages -->
<% if ( flashMessages && flashMessages.success.length > 0) { %>
<div class="alert alert-success alert-dismissible" role="alert">
    <strong>Success</strong>

    <%= flashMessages.success %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<%}%>

<!-- for flash info messages -->
<% if ( flashMessages && flashMessages.info.length > 0) { %>
<div class="alert alert-info alert-dismissible" role="alert">
    <%= flashMessages.info %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<%}%>